= ui.bootstrap :progress, progress: 25, wrapper_html: { class: 'my-4' }, theme: :secondary, label: 'Secondary Striped', striped: true
= ui.bootstrap :progress, progress: 50, wrapper_html: { class: 'my-4' }, theme: :success, label: 'Success Striped', striped: true
= ui.bootstrap :progress, progress: 75, wrapper_html: { class: 'my-4' }, theme: :warning, label: 'Warning Striped', striped: true
= ui.bootstrap :progress, progress: 80, wrapper_html: { class: 'my-4' }, theme: :danger, label: 'Danger Striped', striped: true
